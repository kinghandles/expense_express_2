<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Group detail #<%= @group_detail.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/group_details" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/group_details/<%= @group_detail.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit group detail
        </a>
      </div>

      <div class="col">
        <a href="/delete_group_detail/<%= @group_detail.id %>" class="btn btn-block btn-outline-secondary">
          Delete group detail
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @group_detail.user_id %>
      </dd>

      <dt>
        Group
      </dt>
      <dd>
        <%= @group_detail.group_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@group_detail.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@group_detail.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

