<!-- Validation failure messages -->
<% if @individual_expense_ledger.errors.any? %>
  <% @individual_expense_ledger.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit individual expense ledger #<%= @individual_expense_ledger.id %>
</h1>

<hr>

<!-- Form individual_expense_ledger start -->
<form action="/update_individual_expense_ledger/<%= @individual_expense_ledger.id %>" method="post">
<!-- Form individual_expense_ledger end -->

  <!-- Label and input for expense_id start -->
  <div class="form-group">
    <label for="expense_id">
      Expense
    </label>

    <!-- Input for expense_id start -->
    <input type="text" id="expense_id" name="expense_id" class="form-control" value="<%= @individual_expense_ledger.expense_id %>">
    <!-- Input for expense_id end -->
  </div>
  <!-- Label and input for expense_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @individual_expense_ledger.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for notes start -->
  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <!-- Input for notes start -->
    <textarea id="notes" name="notes" class="form-control" rows="3"><%= @individual_expense_ledger.notes %></textarea>
    <!-- Input for notes end -->
  </div>
  <!-- Label and input for notes end -->

  <button class="btn btn-block btn-outline-secondary">
    Update individual expense ledger
  </button>
</form>

<hr>

<a href="/individual_expense_ledgers">
  Go back
</a>
