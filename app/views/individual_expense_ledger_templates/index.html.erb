<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All individual expense ledgers
    </h1>

    <a href="/individual_expense_ledgers/new" class="btn btn-block btn-outline-secondary">
      Add a new individual expense ledger
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "individual_expense_ledger_templates/individual_expense_ledgers_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Expense
        </th>

        <th>
          User
        </th>

        <th>
          Notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @individual_expense_ledgers.each do |individual_expense_ledger| %>
      <tr>
        <!-- Display individual_expense_ledger.id start -->
        <td>
          <%= individual_expense_ledger.id %>
        </td>
        <!-- Display individual_expense_ledger.id end -->

        <!-- Display individual_expense_ledger.expense_id start -->
        <td>
          <% if individual_expense_ledger.expense.present? %>
            <a href="/expenses/<%= individual_expense_ledger.expense.id %>">
              <%= individual_expense_ledger.expense.group_id %>
            </a>
          <% end %>
        </td>
        <!-- Display individual_expense_ledger.expense_id end -->

        <!-- Display individual_expense_ledger.user_id start -->
        <td>
          <% if individual_expense_ledger.user.present? %>
            <a href="/users/<%= individual_expense_ledger.user.id %>">
              <%= individual_expense_ledger.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display individual_expense_ledger.user_id end -->

        <!-- Display individual_expense_ledger.notes start -->
        <td>
          <%= individual_expense_ledger.notes %>
        </td>
        <!-- Display individual_expense_ledger.notes end -->

        <!-- Display individual_expense_ledger.created_at start -->
        <td>
          <%= time_ago_in_words(individual_expense_ledger.created_at) %> ago
        </td>
        <!-- Display individual_expense_ledger.created_at end -->

        <!-- Display individual_expense_ledger.updated_at start -->
        <td>
          <%= time_ago_in_words(individual_expense_ledger.updated_at) %> ago
        </td>
        <!-- Display individual_expense_ledger.updated_at end -->

        <td>
          <a href="/individual_expense_ledgers/<%= individual_expense_ledger.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @individual_expense_ledgers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
