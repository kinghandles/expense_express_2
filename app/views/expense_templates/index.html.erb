<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All expenses
    </h1>

    <a href="/expenses/new" class="btn btn-block btn-outline-secondary">
      Add a new expense
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Group
        </th>

        <th>
          Category
        </th>

        <th>
          Amount
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @expenses.each do |expense| %>
      <tr>
        <!-- Display expense.id start -->
        <td>
          <%= expense.id %>
        </td>
        <!-- Display expense.id end -->

        <!-- Display expense.group_id start -->
        <td>
          <%= expense.group.group_name %>
        </td>
        <!-- Display expense.group_id end -->

        <!-- Display expense.category_id start -->
        <td>
          <%= expense.category.category_name %>
        </td>
        <!-- Display expense.category_id end -->

        <!-- Display expense.amount start -->
        <td>
          <%= expense.amount %>
        </td>
        <!-- Display expense.amount end -->

        <!-- Display expense.description start -->
        <td>
          <%= expense.description %>
        </td>
        <!-- Display expense.description end -->

        <!-- Display expense.created_at start -->
        <td>
          <%= time_ago_in_words(expense.created_at) %> ago
        </td>
        <!-- Display expense.created_at end -->

        <!-- Display expense.updated_at start -->
        <td>
          <%= time_ago_in_words(expense.updated_at) %> ago
        </td>
        <!-- Display expense.updated_at end -->

        <td>
          <a href="/expenses/<%= expense.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
