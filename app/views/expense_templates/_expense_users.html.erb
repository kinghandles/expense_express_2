<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Users

    <a data-toggle="collapse" href="#expense_individual_expense_ledgers_new_form">
      Add user
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @expense.users.each do |user| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a>
          <%= user.username %>
        </a>

        <a>
          owes: $<%= @expense.amount / @expense.users.count %>
        </a>

        <a href="/delete_individual_expense_ledger_from_expense/<%= IndividualExpenseLedger.where({ :user_id => user.id}).where({ :expense_id => @expense.id}).pluck(:id).first %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="expense_individual_expense_ledgers_new_form">
        <%= render partial: "expense_templates/expense_individual_expense_ledgers_new_form" %>
      </div>
    </div>

  </ul>
</div>
