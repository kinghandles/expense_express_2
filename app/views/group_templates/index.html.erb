<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All groups
    </h1>

    <a href="/groups/new" class="btn btn-block btn-outline-secondary">
      Add a new group
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "group_templates/groups_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
  
        <th>
          Group name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
          Group total expenses
        </th>

        <th>
          You owe
        </th>

        <th>
        </th>
      </tr>

      <% @groups.each do |group| %>
      <tr>

        <td>
          <%= group.group_name %>
        </td>

        <td>
          <%= time_ago_in_words(group.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(group.updated_at) %> ago
        </td>

        <td>
        <% if group.users.include? current_user %>
          $<%= group.total_exp %>
        <%end %>
        </td>

        <td>
        <% if group.users.include? current_user %>
            $<%= (Settlement.where({ :user_id => current_user.id}).where({ :expense_id => group.expenses.pluck(:id) }).pluck(:to_pay).first).to_f - 
                (Settlement.where({ :user_id => current_user.id}).where({ :expense_id => group.expenses.pluck(:id) }).pluck(:to_receive).first).to_f %>
        <% end %>
        </td>

        <td>
        <% if group.users.include? current_user %>
          <a href="/groups/<%= group.id %>">
            Show details
          </a>
        <% end %>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @groups, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
